@using Humanizer
@inject HttpClient Http

<div class="rounded-lg border-1 @BorderColor p-3 text-neutral-100 flex flex-col justify-between">
    <h3 class="text-lg font-bold">@(Service.Name ?? Service.Url)</h3>
    <div class="flex flex-col gap-2">
    @if (statusInfo == null)
    {
        <p>Loading...</p>
    }
    else
    {
        <p>@statusInfo.Status</p>
        <p class="text-xs text-neutral-200">Last update: @statusInfo.LastChecked.Humanize()</p>
    }
    </div>
</div>